{
  "name": "serversync",
  "version": "0.1.0",
  "description": "Next-generation state management for React 18/19 with Server Components support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
